<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	 http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	 version="2.5"
	 xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- Servlets -->
	<servlet>
		<servlet-name>SUNServiceImpl</servlet-name>
		<servlet-class>com.uibinder.server.serviceImpl.SUNServiceImpl</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>SUNServiceImpl</servlet-name>
		<url-pattern>/index/sunService</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SUNServiceImpl</servlet-name>
		<url-pattern>/admin/sunService</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>LoginServiceImpl</servlet-name>
		<servlet-class>com.uibinder.server.serviceImpl.LoginServiceImpl</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>LoginServiceImpl</servlet-name>
		<url-pattern>/index/loginService</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginServiceImpl</servlet-name>
		<url-pattern>/admin/loginService</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>AdminServiceImpl</servlet-name>
		<servlet-class>com.uibinder.server.serviceImpl.AdminServiceImpl</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>AdminServiceImpl</servlet-name>
		<url-pattern>/admin/adminService</url-pattern>
	</servlet-mapping>
	
	<filter>
		<filter-name>ObjectifyFilter</filter-name>
		<filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ObjectifyFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>admin</web-resource-name>
			<url-pattern>/admin/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
	
	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>Index.html</welcome-file>
	</welcome-file-list>

</web-app>
