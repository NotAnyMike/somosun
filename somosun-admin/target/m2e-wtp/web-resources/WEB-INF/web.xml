<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<servlet>
        <servlet-name>getAllGroups</servlet-name>
        <servlet-class>com.somosun.adminModule.GetAllGroups</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllGroups</servlet-name>
        <url-pattern>/admin/get-all-groups</url-pattern>
    </servlet-mapping>
    
	<servlet>
        <servlet-name>analyseAllCareers</servlet-name>
        <servlet-class>com.somosun.adminModule.AnalyseAllCareers</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>analyseAllCareers</servlet-name>
        <url-pattern>/admin/analyse-all-careers</url-pattern>
    </servlet-mapping>
    
    <filter>
		<filter-name>ObjectifyFilter</filter-name>
		<filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ObjectifyFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
    
    <security-constraint>
		<web-resource-collection>
			<web-resource-name>admin</web-resource-name>
			<url-pattern>/admin/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
</web-app>
